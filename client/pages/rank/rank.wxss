/* pages/rank/rank.wxss */
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.table {
width: 100%;
}

.tr {
width: 100%;
display: flex;
justify-content: space-between;
}

.th, .td {
padding: 5px;
text-align: center;
width: 100%;

}
.tr:nth-child(odd){
background: #fff;
}
.tr:nth-child(even){
background: #eee;
}
.th {
font-weight: 400;
background: #ffffff;
}